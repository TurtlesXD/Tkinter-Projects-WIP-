
from multiprocessing.popen_spawn_win32 import WINENV
import tkinter as tk
from time import sleep
import random
window = tk.Tk()
window.title("Rock, Paper, Scissors")
window.resizable(0,0)
choice = random.randint(1,10)
WINSS = 0
LOSSES = 0
Totalmatches = 0
gamemode = "Easy"
window.geometry("500x489")



def callback1():
    print("player chose rock")
    WINSS = 0
    LOSSES = 0
    Totalmatches = 0
    choice = random.randint(1,3)
    if choice == 1:
        text2.config(text = "Opponent chose Rock and You chose Rock Too!(Tie)")
        Totalmatches = Totalmatches = Totalmatches+1
        print(LOSSES)
        print(WINSS)
        print(Totalmatches)
    if choice == 2:
        text2.config(text = "Opponent chose Paper and You chose Rock(Loss)")
        LOSSES = LOSSES +1
        Totalmatches = Totalmatches = Totalmatches+1
        print(LOSSES)
        print(WINSS)
        print(Totalmatches)
    if choice == 3:
        text2.config(text = "Opponent chose Scissors and You chose Rock(Win)")
        WINSS= WINSS+1
        Totalmatches = Totalmatches+1
        print(LOSSES)
        print(str(WINSS))
        print(Totalmatches)

    

        

def callback2():
    print("player chose paper") 
    WINSS = 0
    LOSSES = 0
    Totalmatches = 0
    choice = random.randint(1,3)
    if choice == 1:
        text2.config(text = "Opponent chose Rock and You chose paper(Win)")
        WINSS= WINSS= WINSS+1
        Totalmatches = Totalmatches+1
        print(LOSSES)
        print(WINSS)
        print(Totalmatches)
    if choice == 2:
        text2.config(text = "Opponent chose Paper and You chose paper(Tie)")
        Totalmatches = Totalmatches+1
        print(LOSSES)
        print(WINSS)
        print(Totalmatches)
    if choice == 3:
        text2.config(text = "Opponent chose Scissors and You chose paper(Loss)")
        LOSSES = LOSSES +1
        Totalmatches = Totalmatches+1
        print(LOSSES)
        print(WINSS)
        print(Totalmatches)

def callback3():
