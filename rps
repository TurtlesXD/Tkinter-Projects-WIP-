        print(LOSSES)
        print(WINSS)
        print(Totalmatches)
    if choice == 2:
        text2.config(text = "Opponent chose Paper and You chose scissors(Win)")
        WINSS= WINSS+1
        Totalmatches = Totalmatches+1
