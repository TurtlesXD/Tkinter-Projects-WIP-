    height=5,
    bg="grey",
    fg="black",
    command=callback1,
)

button2 = button = tk.Button(
    text="paper",
    width=250,
    height=5,
    bg="yellow",
    fg="black",
    command=callback2,
)

button3 = button = tk.Button(
    text="scissors",
    width=250,
    height=5,
    bg="red",
    fg="black",
    command=callback3,
)

